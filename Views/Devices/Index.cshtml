@model IEnumerable<LLPApp.Models.Device>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperatingSystem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @{

                    if (item.DeviceNum != null)
                    {
                        @Html.DisplayFor(modelItem => item.DeviceNum);
                    }
                    else
                    {
                        <em>Unassigned</em>
                    }

                }
            </td>
            <td>
                @{
                    var brandmodel = 
                        item.DeviceModel.Brand + " " + 
                        item.DeviceModel.ModelName + " " + 
                        item.DeviceModel.ModelNum;
                }
                @brandmodel
            </td>
            <td>
                @Html.DisplayFor(mItem => item.SerialNum)
            </td>
            <td>
                @Html.DisplayFor(mItem => item.OperatingSystem)
            </td>
            <td>
                @Html.DisplayFor(mItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
